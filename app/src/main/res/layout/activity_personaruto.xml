<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logonaru"
    tools:context=".personaruto">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="369dp"
        android:layout_height="50dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="PERSONAJES DE NARUTO"
        android:textAlignment="center"
        android:textColor="@color/colorTitulo"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="229dp"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/pnaruto"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                app:srcCompat="naruto"
                android:background="@drawable/pnaruto" />

            <TextView
                android:id="@+id/txtnaruto"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:paddingLeft="25dp"
                android:text="      NARUTO"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <Button
                android:id="@+id/descripcionNaruto"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/teal_700"
                android:text="Descripción" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="511dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/psasuke"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:background="@drawable/psasuke"
                app:srcCompat="Sasuke" />

            <TextView
                android:id="@+id/txtSasuke"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:paddingLeft="25dp"
                android:text="          SASUKE"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <Button
                android:id="@+id/descripcionSasuke"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/teal_700"
                android:text="DESCRIPCION" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="186dp"
            android:layout_height="229dp"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/pKakashi"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:background="@drawable/pkakashi"
                app:srcCompat="Kakashi" />

            <TextView
                android:id="@+id/txtKakashi"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:paddingLeft="25dp"
                android:text="    KAKASHI"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <Button
                android:id="@+id/descripcionKakashi"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/teal_700"
                android:text="DESCRIPCIÓN" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="511dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/psakura"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:background="@drawable/psakura"
                app:srcCompat="Sakura" />

            <TextView
                android:id="@+id/txtSakurs"
                android:layout_width="209dp"
                android:layout_height="29dp"
                android:layout_marginBottom="1dp"
                android:paddingLeft="25dp"
                android:text="          SAKURA"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="20sp" />

            <Button
                android:id="@+id/descripcionSakura"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/teal_700"
                android:text="DDESCRIPCIÓN" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="193dp"
            android:layout_height="229dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pHinata"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:background="@drawable/phinata"
                app:srcCompat="Hinata" />

            <TextView
                android:id="@+id/txtHinata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:paddingLeft="25dp"
                android:text="HINATA HYUGA"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/descripcionHinata"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/teal_700"
                android:text="DESCRIPCIÓN" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="511dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pneji"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:background="@drawable/pneji"
                app:srcCompat="neji" />

            <TextView
                android:id="@+id/txtNeji"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:paddingLeft="25dp"
                android:text="           NEJI"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="20sp" />

            <Button
                android:id="@+id/descripcionNeji"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/teal_700"
                android:text="DESCRIPCIÓN" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/regresar1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/colorBoton"
        android:text="Regresar" />

</LinearLayout>

