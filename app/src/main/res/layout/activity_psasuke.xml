<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".psasuke">
<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_weight="1"
    android:background="@drawable/sasuke"
android:orientation="vertical">
    <Button
        android:id="@+id/regresar1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="@color/colorBoton"
        android:text="Regresar" />

<TextView
    android:id="@+id/textView3"
    android:layout_width="264dp"
    android:layout_height="50dp"
    android:layout_marginLeft="80dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="10dp"
    android:text="Sasuke Uchiha"
    android:textAlignment="center"
    android:textColor="@color/teal_700"
    android:textSize="34sp"
    android:textStyle="bold" />


<TextView
    android:id="@+id/textView5"
    android:layout_width="match_parent"
    android:layout_height="136dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="320dp"
    android:layout_weight="1"
    android:text="El es un rival para el protagonista principal de la obra. Es un miembro del clan Uchiha, uno de los clanes ninja más fuertes de la Aldea Oculta de la Hoja, es el hermano menor de Itachi Uchiha y el padre de Sarada Uchiha. Se gradúa de genin, pasa a formar parte del «Equipo 7»"
    android:textAlignment="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textSize="20sp"
    android:textColor="@color/white"
    app:autoSizeTextType="uniform" />

</LinearLayout>

    </LinearLayout>